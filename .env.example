# Proxy configuration
PORT=443

# API configuration - for external access
API_HOST=0.0.0.0
API_PORT=8080

# Public URL for client links (replace with your server IP/domain)
PUBLIC_BASE_URL=http://YOUR_SERVER_IP:8080

# Database
CONFIG_DB=./config.db

# Admin credentials
ADMIN_USER=admin
# ADMIN_PASS=your_password  # if not set, will be generated

# Telegram bot (optional)
# TG_BOT_TOKEN=your_bot_token
# TG_BOT_USERNAME=your_bot_username
# TG_BOT_POLL=true

# YooKassa payments (optional)
# YOOKASSA_SHOP_ID=your_shop_id
# YOOKASSA_SECRET_KEY=your_secret_key

# Email notifications (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
# SMTP_TLS=true
# SMTP_STARTTLS=true

# Other settings
# QUIET=false
# STATS_SAMPLE_PERIOD=10
# STATS_RETENTION_HOURS=168
# DEV_ISSUE_LINKS=false
